<div class="search-field parallax-effect" align="center">
    <div class="container valign-wrapper">
        <div class="card-panel z-depth-3">
            <%= render @profile %>
        </div>
    </div>
    <div class="container">
<h1>Your games</h1>
            <% @listings1.each do |listing| %>
            <div class="card">
              <div class="card-image waves-effect waves-block waves-light">
                <%=link_to image_tag(listing.avatar), listing %>
                </div>

                <div class="card-content">
                    <p>
                        <b><%=link_to listing.name, listing %></b>
                        <br>
                        Description:
                        <%=listing.description %>
                        <br>
                        Price:
                        <%= listing.price %>
                        <br>
                        Difficulty:
                        <%= listing.difficulty %>
                        <br>
                        Number of players:
                        <%= listing.players %>
                        <br><br>
                    </p>
                  </div>
                </div>
          <% end %>
    </div>
</div>
