<h1>Create a new listing</h1>

<%= form_for @listing do |f| %>

    <% f.hidden_field :user_id, :value => @usermoney %>

    <div class="form-group">
       <%= f.label :name %>
       <%= f.text_field :name, class: "form-control", placeholder: ". . ." %>
    </div>

    <div class="form-group">
       <%= f.label :description %>
       <%= f.text_field :description, class: "form-control", placeholder: ". . ."   %>
    </div>

    <div class="form-group">
       <%= f.label :players %>
       <%= f.text_field :players, class: "form-control", placeholder: "url . . ."   %>
    </div>

    <div class="form-group">
       <%= f.label :difficulty %>
       <%= f.text_area :difficulty, class: "form-control", rows: 6  %>
    </div>

    <div class="form-group">
       <%= f.label :price %>
       <%= f.text_area :price, class: "form-control", rows: 6  %>
    </div>

    <div class="form-group">
       <%= f.label :avatar %>
       <%= f.text_area :avatar, class: "form-control", rows: 6  %>
    </div>

    <%= f.submit (@listing.new_record? ? "Create" : "Update"), class: "form-control btn-primary" %>

<% end %>
